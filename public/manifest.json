{
  "manifest_version": 3,
  "name": "Mnemosyne",
  "version": "1.0.0",
  "description": "Extracts the text from webpages you visit and makes it available for semantic search.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },

  "permissions": ["storage", "tabs", "activeTab", "webRequest", "contextMenus"]
}